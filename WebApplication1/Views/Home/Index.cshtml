                <script type="text/javascript">
                    $("#button1").click(function () {
                        HslMenuClick("查看电梯")
                    })
                </script>
            </div>
        </div>

    </div>
    <div data-options="region:'center',title:'Main Title',iconCls:'icon-ok'">
